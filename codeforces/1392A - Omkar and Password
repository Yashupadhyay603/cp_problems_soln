#include<bits/stdc++.h>
using namespace std;

int main()
{
	int t;
	cin>>t;
	while(t--)
	{
		int n;
		cin>>n;
		vector<int> v(n);
		for(int i=0;i<n;i++)
		{
			cin>>v[i];
		}
		sort(v.begin(),v.end());
		if(v[0]==v[v.size()-1])
		{
			cout<<v.size()<<"\n";
		}
		else
		{
			cout<<"1\n";
		}
		

	}	
	return 0;
}
