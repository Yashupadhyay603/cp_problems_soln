#include<bits/stdc++.h>
using namespace std;

struct vect
{
	int a,b,c;
};

int main()
{
	int n,i,x=0,y=0,z=0;
	cin>>n;
	vect arr[n];
	for(i=0;i<n;i++)
	{
		cin>>arr[i].a>>arr[i].b>>arr[i].c;
		x=x+arr[i].a;
		y=y+arr[i].b;
		z=z+arr[i].c;
	}
	if(x==0&&y==0&&z==0)
	{
		cout<<"YES"<<"\n";
	}
	else
	{
		cout<<"NO"<<"\n";
	}
	return 0;
}
